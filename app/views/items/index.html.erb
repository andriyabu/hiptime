<div class="col w-100 mt-5 p-3">
  <div class="w-100 text-center">
    <h1>All Items</h1>
  </div>
  <hr>
  <% @items.each do |item| %>
  <div class="col w-100 bg-light p-3 mt-2">
    <h1><%= item.title %></h1>
    <p><%= item.description %></p>
    <%= link_to "Show", item_path(item), class:"btn btn-info" %>
  </div>
  <% end %>
  <%= link_to "New Items", new_item_path, class:"btn btn-primary mt-3" %>
</div>
