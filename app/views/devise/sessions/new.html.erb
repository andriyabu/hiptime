<div class="row w-100 d-flex justify-content-center p-5">
    <div class="col-md-5 bg-light p-3">
      <h2 class="text-center">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, class:"form-control" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" }, class:"form-control" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Log in", class:"btn btn-success-two btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
</div>
